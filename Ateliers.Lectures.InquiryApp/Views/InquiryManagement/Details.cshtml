@model Ateliers.Lectures.InquiryApp.Models.Inquiry.InquiryModel

@{
    ViewData["Title"] = "お問い合わせ詳細";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>内容</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            お問い合わせ項目:
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.InquiryItems)
            {
                <p>@item.Name</p>
            }
        </dd>
        <dt class="col-sm-2">
            お名前:
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            メールアドレス:
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            電話番号:
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            会社名:
        </dt>
        <dd class="col-sm-10">
            @Model.CompanyName
        </dd>
        <dt class="col-sm-2">
            所属部署:
        </dt>
        <dd class="col-sm-10">
            @Model.Department
        </dd>
        <dt class="col-sm-2">
            当社をどこで知りましたか？:
        </dt>
        <dd class="col-sm-10">
            @foreach (var method in Model.FoundOutMethods)
            {
                <p>@method.Name</p>
            }
        </dd>
        <dt class="col-sm-2">
            お問い合わせ内容:
        </dt>
        <dd class="col-sm-10">
            @Model.Content
        </dd>
        <dt class="col-sm-2">
            作成日時:
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedAt.ToString("yyyy/MM/dd HH:mm:ss")
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index">戻る</a>
</div>
